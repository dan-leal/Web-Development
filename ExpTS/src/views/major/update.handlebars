<div class="d-flex justify-content-between">
  <h3>Editar Curso</h3>
  <div>
    <a href="/major" class="btn btn-primary">Voltar</a>
  </div>
</div>
<div class="col-6">
  <form action="/major/update" method="post">
    <div class="mb-3">
      <label for="name" class="form-label">Nome</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="{{major.name}}"
      />
    </div>
    <div class="mb-3">
      <label for="code" class="form-label">Sigla</label>
      <input
        type="text"
        class="form-control"
        id="code"
        name="code"
        value="{{major.code}}"
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Descrição do curso</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
        rows="3"
      >{{major.description}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
  </form>
</div>
